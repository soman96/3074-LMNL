<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- App Header -->
    <include
        layout="@layout/include_app_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvCreatePostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Post"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Post Text Input -->
    <EditText
        android:id="@+id/etPostText"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="What's on your mind?"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCreatePostTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmitPost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/etPostText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
